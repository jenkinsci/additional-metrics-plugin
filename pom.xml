<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.jenkins-ci.plugins</groupId>
        <artifactId>plugin</artifactId>
        <version>4.6</version>
    </parent>

    <artifactId>additional-metrics</artifactId>
    <version>1.4-SNAPSHOT</version>
    <packaging>hpi</packaging>

    <name>Additional Metrics Plugin</name>
    <description>Provides additional metrics for List Views: Success/Failure Rates, Min/Max/Avg run and checkout
        durations, Success/Failure
        Time Rates.
    </description>
    <url>https://wiki.jenkins-ci.org/display/JENKINS/Additional+Metrics+Plugin</url>

    <licenses>
        <license>
            <name>MIT License</name>
            <url>https://opensource.org/licenses/MIT</url>
        </license>
    </licenses>

    <developers>
        <developer>
            <id>chadiem</id>
            <name>Chadi El Masri</name>
            <email>chadimsr@gmail.com</email>
        </developer>
    </developers>

    <properties>
        <jenkins.version>2.164.3</jenkins.version>
        <java.level>8</java.level>

        <jenkins.bom.artifact>bom-2.164.x</jenkins.bom.artifact>
        <jenkins.bom.version>10</jenkins.bom.version>
    </properties>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>io.jenkins.tools.bom</groupId>
                <artifactId>${jenkins.bom.artifact}</artifactId>
                <version>${jenkins.bom.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <dependencies>
        <dependency>
            <groupId>org.jenkins-ci.plugins.workflow</groupId>
            <artifactId>workflow-api</artifactId>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>org.jenkins-ci.plugins.workflow</groupId>
            <artifactId>workflow-cps</artifactId>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>org.jenkins-ci.plugins.workflow</groupId>
            <artifactId>workflow-job</artifactId>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>org.jenkins-ci.plugins.workflow</groupId>
            <artifactId>workflow-step-api</artifactId>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>org.jenkins-ci.plugins.workflow</groupId>
            <artifactId>workflow-scm-step</artifactId>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>org.jenkins-ci.plugins.workflow</groupId>
            <artifactId>workflow-durable-task-step</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.jenkins-ci.plugins.workflow</groupId>
            <artifactId>workflow-basic-steps</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.jenkins-ci.plugins</groupId>
            <artifactId>git</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <scm>
        <connection>scm:git:git://github.com/jenkinsci/additional-metrics-plugin.git</connection>
        <developerConnection>scm:git:git@github.com:jenkinsci/additional-metrics-plugin.git</developerConnection>
        <url>https://github.com/jenkinsci/additional-metrics-plugin</url>
        <tag>HEAD</tag>
    </scm>

    <repositories>
        <repository>
            <id>repo.jenkins-ci.org</id>
            <url>https://repo.jenkins-ci.org/public/</url>
        </repository>
    </repositories>

    <pluginRepositories>
        <pluginRepository>
            <id>repo.jenkins-ci.org</id>
            <url>https://repo.jenkins-ci.org/public/</url>
        </pluginRepository>
    </pluginRepositories>

    <profiles>
        <profile>
            <id>2.235.x</id>

            <activation>
                <property>
                    <name>jenkins.version</name>
                    <value>2.235.3</value>
                </property>
            </activation>

            <properties>
                <jenkins.version>2.235.3</jenkins.version>
                <jenkins.bom.artifact>bom-2.235.x</jenkins.bom.artifact>
                <jenkins.bom.version>11</jenkins.bom.version>
            </properties>
        </profile>
    </profiles>

</project>
